<Window x:Class="PROG2500_A7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROG2500_A7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="RunUnsynchedButton_Thread" 
        Content="Run Unsynched (Thread)" 
        HorizontalAlignment="Center" 
        VerticalAlignment="Bottom" 
        Margin="0,0,300,10" 
        Width="150" 
        Click="RunUnsynchedButton_Click_Thread"/>

        <Button x:Name="RunSynchedButton_Thread" 
        Content="Run Synched (Thread)" 
        HorizontalAlignment="Center" 
        VerticalAlignment="Bottom" 
        Margin="300,0,0,10" 
        Width="150" 
        Click="RunSynchedButton_Click_Thread"/>
        <!-- Progress Bar -->
        <ProgressBar x:Name="ProgressBar" 
             HorizontalAlignment="Stretch" 
             VerticalAlignment="Bottom" 
             Margin="30" 
             Height="20"/>
        <!-- Output TextBox -->
        <TextBox x:Name="Text_Output" 
                 HorizontalAlignment="Stretch" 
                 VerticalAlignment="Top" 
                 Margin="10" 
                 Height="300" 
                 IsReadOnly="True" 
                 VerticalScrollBarVisibility="Auto" 
                 TextWrapping="Wrap"/>

        <!-- Buttons -->
        <Button x:Name="RunUnsynchedButton" 
                Content="Run Unsynched (Task)" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Bottom" 
                Margin="10" 
                Width="120" 
                Click="RunUnsynchedButton_Click"/>

        <Button x:Name="RunSynchedButton" 
                Content="Run Synched (Task)" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom" 
                Margin="10" 
                Width="120" 
                Click="RunSynchedButton_Click"/>

        <Button x:Name="ClearButton" 
                Content="Clear Output" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                Margin="10" 
                Width="120" 
                Click="ClearButton_Click"/>
    </Grid>
</Window>
